---
interface Heading {
    depth: number;
    slug: string;
    text: string;
}

interface Props {
    headings: Heading[];
}

const { headings } = Astro.props;

// Include h2, h3, and h4 headings (some articles start with h3)
const tocHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 4);

// Calculate the minimum depth to normalize indentation
const minDepth = tocHeadings.length > 0 ? Math.min(...tocHeadings.map(h => h.depth)) : 2;
---

{tocHeadings.length > 0 && (
    <nav class="toc" id="toc-nav" aria-label="文章目录" role="navigation">
        <div class="toc-header">
            <span>目录</span>
            <button class="toc-toggle" id="toc-toggle" aria-label="关闭目录" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <ul class="toc-list" id="toc-list" role="list">
            {tocHeadings.map((heading) => (
                <li class={`toc-item depth-${heading.depth - minDepth}`}>
                    <a href={`#${heading.slug}`} class="toc-link">
                        {heading.text}
                    </a>
                </li>
            ))}
        </ul>
    </nav>
)}

<!-- Mobile TOC toggle button -->
{tocHeadings.length > 0 && (
    <button class="toc-mobile-toggle" id="toc-mobile-toggle" aria-label="打开文章目录" aria-expanded="false" type="button">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="15" y2="12"></line>
            <line x1="3" y1="18" x2="18" y2="18"></line>
        </svg>
        <span>目录</span>
    </button>
)}

<style>
    .toc {
        position: fixed;
        top: 100px;
        right: calc((100vw - 720px) / 2 - 260px);
        width: 220px;
        max-height: calc(100vh - 150px);
        overflow-y: auto;
        padding: 1rem;
        background-color: var(--surface-color);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        box-shadow: var(--shadow);
        font-size: 0.8125rem;
        z-index: 50;
    }

    .toc-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: 600;
        font-size: 0.75rem;
        color: var(--text-tertiary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .toc-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-tertiary);
        padding: 4px;
        border-radius: 4px;
        transition: all 0.15s ease;
    }

    .toc-toggle:hover {
        background-color: var(--hover-color);
        color: var(--text-secondary);
    }

    .toc-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .toc-item {
        margin: 0;
        line-height: 1.4;
    }

    .toc-item.depth-0 {
        padding-left: 0;
    }

    .toc-item.depth-1 {
        padding-left: 1rem;
    }

    .toc-item.depth-2 {
        padding-left: 2rem;
    }

    .toc-link {
        display: block;
        padding: 0.375rem 0.625rem;
        color: var(--text-secondary);
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.15s ease;
        border-left: 2px solid transparent;
        margin-left: -2px;
    }

    .toc-link:hover {
        color: var(--primary-color);
        background-color: var(--hover-color);
    }

    .toc-link.active {
        color: var(--primary-color);
        background-color: var(--hover-color);
        border-left-color: var(--primary-color);
        font-weight: 500;
    }

    /* Mobile toggle button */
    .toc-mobile-toggle {
        display: none;
        position: fixed;
        bottom: 24px;
        right: 24px;
        z-index: 99;
        background-color: var(--surface-color);
        color: var(--text-color);
        border: 1px solid var(--border-color);
        border-radius: 28px;
        padding: 10px 16px;
        cursor: pointer;
        box-shadow: var(--shadow-lg);
        align-items: center;
        gap: 8px;
        font-size: 0.8125rem;
        font-weight: 500;
        transition: all 0.15s ease;
    }

    .toc-mobile-toggle:hover {
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

    /* Responsive: show mobile toggle and adjust TOC for smaller screens */
    @media (max-width: 1200px) {
        .toc {
            position: fixed;
            top: auto;
            bottom: 80px;
            right: 24px;
            left: auto;
            width: 260px;
            max-height: 50vh;
            display: none;
            border-radius: 12px;
        }

        .toc.visible {
            display: block;
            animation: slideUp 0.2s ease;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .toc-toggle {
            display: block;
        }

        .toc-mobile-toggle {
            display: flex;
        }
    }

    @media (max-width: 480px) {
        .toc {
            left: 16px;
            right: 16px;
            width: auto;
            bottom: 80px;
        }

        .toc-mobile-toggle {
            right: 16px;
            bottom: 16px;
        }
    }

    /* Custom scrollbar */
    .toc::-webkit-scrollbar {
        width: 4px;
    }

    .toc::-webkit-scrollbar-track {
        background: transparent;
    }

    .toc::-webkit-scrollbar-thumb {
        background-color: var(--border-color);
        border-radius: 2px;
    }

    .toc::-webkit-scrollbar-thumb:hover {
        background-color: var(--text-tertiary);
    }
</style>

<script>
    // Highlight active heading based on scroll position
    function initTOC() {
        const toc = document.getElementById('toc-nav');
        const tocList = document.getElementById('toc-list');
        const tocToggle = document.getElementById('toc-toggle');
        const mobileToggle = document.getElementById('toc-mobile-toggle');
        const tocLinks = document.querySelectorAll('.toc-link');
        const headings = document.querySelectorAll('article h2, article h3, article h4');
        
        if (!toc || tocLinks.length === 0 || headings.length === 0) return;

        // Mobile toggle functionality
        if (mobileToggle) {
            mobileToggle.addEventListener('click', () => {
                toc.classList.toggle('visible');
            });
        }

        if (tocToggle) {
            tocToggle.addEventListener('click', () => {
                toc.classList.remove('visible');
            });
        }

        // Close TOC when clicking outside
        document.addEventListener('click', (e) => {
            const target = e.target as HTMLElement;
            if (!toc.contains(target) && !mobileToggle?.contains(target)) {
                toc.classList.remove('visible');
            }
        });

        const observerOptions = {
            rootMargin: '-80px 0px -70% 0px',
            threshold: 0
        };

        let currentActiveId = '';

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    currentActiveId = entry.target.id;
                    updateActiveLink();
                }
            });
        }, observerOptions);

        headings.forEach(heading => {
            if (heading.id) {
                observer.observe(heading);
            }
        });

        function updateActiveLink() {
            tocLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${currentActiveId}`) {
                    link.classList.add('active');
                }
            });
        }

        // Smooth scroll on click
        tocLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = link.getAttribute('href')?.slice(1);
                const targetElement = targetId ? document.getElementById(targetId) : null;
                if (targetElement) {
                    const navHeight = 70;
                    const targetPosition = targetElement.getBoundingClientRect().top + window.scrollY - navHeight;
                    window.scrollTo({
                        top: targetPosition,
                        behavior: 'smooth'
                    });
                    // Close mobile TOC after clicking
                    toc.classList.remove('visible');
                }
            });
        });
    }

    // Initialize on page load
    initTOC();
    
    // Re-initialize on Astro page transitions
    document.addEventListener('astro:page-load', initTOC);
</script>
