---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = (await getCollection('blog', ({ data }) => {
	return data.draft !== true;
})).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const getSlug = (post: any) => {
    return post.slug || post.id.replace(/\.md$/, '');
};

// Group posts by year
const postsByYear = posts.reduce((acc, post) => {
	const year = post.data.date.getFullYear();
	if (!acc[year]) {
		acc[year] = [];
	}
	acc[year].push(post);
	return acc;
}, {} as Record<number, typeof posts>);

const years = Object.keys(postsByYear).sort((a, b) => Number(b) - Number(a));

// Get excerpt from content
const getExcerpt = (body: string | undefined, maxLength = 120) => {
	if (!body) return '';
	const text = body
		.replace(/^---[\s\S]*?---/, '') // Remove frontmatter
		.replace(/#{1,6}\s+/g, '') // Remove headings
		.replace(/\*\*|__/g, '') // Remove bold
		.replace(/\*|_/g, '') // Remove italic
		.replace(/`{1,3}[\s\S]*?`{1,3}/g, '') // Remove code
		.replace(/\[([^\]]+)\]\([^)]+\)/g, '$1') // Convert links to text
		.replace(/!\[.*?\]\(.*?\)/g, '') // Remove images
		.replace(/\n+/g, ' ') // Replace newlines with spaces
		.trim();
	return text.length > maxLength ? text.slice(0, maxLength) + '...' : text;
};
---

<Layout title="首页" description="Lei的博客 - 分享独立开发、产品思考与技术实践">
	<div class="hero">
		<p class="hero-desc">独立开发 · 产品思考 · 技术实践</p>
	</div>

	<div class="posts-container">
		{years.map((year) => (
			<section class="year-section">
				<h2 class="year-title">{year}</h2>
				<ul class="post-list">
					{postsByYear[Number(year)].map((post) => (
						<li class="post-item">
							<a href={`/posts/${getSlug(post)}/`} class="post-link">
								<div class="post-content">
									<h3 class="post-title">{post.data.title}</h3>
									<p class="post-excerpt">{getExcerpt(post.body)}</p>
									<div class="post-meta">
										<time datetime={post.data.date.toISOString()} class="post-date">
											{post.data.date.toLocaleDateString('zh-CN', {
												month: 'long',
												day: 'numeric',
											})}
										</time>
										{post.data.tags && post.data.tags.length > 0 && (
											<div class="post-tags">
												{post.data.tags.slice(0, 3).map(tag => (
													<span class="post-tag">#{tag}</span>
												))}
											</div>
										)}
									</div>
								</div>
								<span class="post-arrow">→</span>
							</a>
						</li>
					))}
				</ul>
			</section>
		))}
	</div>
</Layout>

<style>
	.hero {
		text-align: center;
		padding: 2rem 0 3rem;
		margin-bottom: 1rem;
	}

	.hero-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin: 0 0 0.5rem 0;
		letter-spacing: -0.03em;
		background: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-desc {
		margin: 0;
		color: var(--text-secondary);
		font-size: 1.125rem;
	}

	.posts-container {
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	.year-section {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.year-title {
		font-size: 0.875rem;
		font-weight: 600;
		color: var(--text-tertiary);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin: 0;
		padding-bottom: 0.75rem;
		border-bottom: 1px solid var(--border-color);
	}

	.post-list {
		list-style-type: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.post-item {
		margin: 0;
	}

	.post-link {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		padding: 1rem 1.25rem;
		background-color: var(--surface-color);
		border: 1px solid var(--border-color);
		border-radius: 12px;
		text-decoration: none;
		transition: all 0.2s ease;
	}

	.post-link:hover {
		border-color: var(--primary-color);
		box-shadow: var(--shadow);
		transform: translateY(-1px);
	}

	.post-link:hover .post-arrow {
		transform: translateX(4px);
		color: var(--primary-color);
	}

	.post-content {
		flex: 1;
		min-width: 0;
	}

	.post-title {
		margin: 0 0 0.375rem 0;
		font-size: 1.0625rem;
		font-weight: 600;
		color: var(--text-color);
		line-height: 1.4;
	}

	.post-excerpt {
		margin: 0 0 0.5rem 0;
		font-size: 0.875rem;
		color: var(--text-secondary);
		line-height: 1.5;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.post-meta {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		font-size: 0.8125rem;
	}

	.post-date {
		color: var(--text-tertiary);
	}

	.post-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.post-tag {
		color: var(--primary-color);
		background-color: var(--hover-color);
		padding: 0.125rem 0.5rem;
		border-radius: 4px;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.post-arrow {
		color: var(--text-tertiary);
		font-size: 1.25rem;
		transition: all 0.2s ease;
		flex-shrink: 0;
	}

	@media (max-width: 640px) {
		.hero {
			padding: 1.5rem 0 2rem;
		}

		.hero-title {
			font-size: 2rem;
		}

		.post-link {
			padding: 0.875rem 1rem;
		}

		.post-title {
			font-size: 1rem;
		}

		.post-excerpt {
			-webkit-line-clamp: 1;
		}

		.post-arrow {
			display: none;
		}
	}
</style>
