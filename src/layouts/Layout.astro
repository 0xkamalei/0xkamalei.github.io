---
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
	article?: boolean;
	publishedTime?: string;
	tags?: string[];
}

const { 
	title, 
	description = 'Lei的技术博客 - 分享编程、云原生、独立开发等技术文章',
	image = '/og-default.png',
	article = false,
	publishedTime,
	tags = []
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://blog.leix.dev');
const ogImage = new URL(image, Astro.site || 'https://blog.leix.dev');
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={article ? 'article' : 'website'} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:locale" content="zh_CN" />
		{publishedTime && <meta property="article:published_time" content={publishedTime} />}
		{tags.map(tag => <meta property="article:tag" content={tag} />)}
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />
		
		<!-- Fonts - Inter for UI, Noto Serif SC for Chinese reading -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Serif+SC:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
		
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Lei's Blog</title>
        <script is:inline>
            // Inline script to avoid FOUC
            const theme = (() => {
                if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                    return localStorage.getItem('theme');
                }
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                return 'light';
            })();
            document.documentElement.setAttribute('data-theme', theme);
        </script>
	</head>
	<body>
		<nav>
            <div class="nav-content">
                <a href="/" class="logo">
					<span class="logo-icon">✦</span>
					<span class="logo-text">Lei's Blog</span>
				</a>
				<div class="nav-right">
					<a href="/" class="nav-link">文章</a>
					<a href="https://leix.dev" target="_blank" rel="noopener noreferrer" class="nav-link">关于</a>
                	<ThemeToggle />
				</div>
            </div>
		</nav>
		<main>
			<slot />
		</main>
        <footer>
            <div class="footer-content">
				<div class="footer-brand">
					<span class="footer-logo">✦ Lei's Blog</span>
					<p class="footer-desc">独立开发 · 产品思考 · 技术实践</p>
				</div>
				<div class="footer-links">
					<a href="https://leix.dev" target="_blank" rel="noopener noreferrer">主站</a>
					<span class="footer-divider">·</span>
					<a href="https://github.com" target="_blank" rel="noopener noreferrer">GitHub</a>
				</div>
                <p class="footer-copyright">&copy; {new Date().getFullYear()} Lei. All rights reserved.</p>
            </div>
        </footer>
		<style is:global>
			:root {
                /* Modern color palette */
                --primary-color: #2563eb;
                --primary-hover: #1d4ed8;
                --accent-color: #8b5cf6;
                --accent-gradient: linear-gradient(135deg, #2563eb 0%, #8b5cf6 100%);
                
                /* Light Theme */
                --bg-color: #fafafa;
                --bg-secondary: #f5f5f5;
                --surface-color: #ffffff;
                --text-color: #1a1a1a;
                --text-secondary: #6b7280;
                --text-tertiary: #9ca3af;
                --border-color: #e5e7eb;
                --border-light: #f3f4f6;
                --hover-color: rgba(37, 99, 235, 0.04);
                --shadow-sm: 0 1px 2px rgba(0,0,0,0.04);
                --shadow: 0 4px 6px -1px rgba(0,0,0,0.05), 0 2px 4px -2px rgba(0,0,0,0.05);
                --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.08), 0 4px 6px -4px rgba(0,0,0,0.05);
                --code-bg: #f8fafc;
			}

            [data-theme='dark'] {
                --bg-color: #0a0a0a;
                --bg-secondary: #111111;
                --surface-color: #171717;
                --text-color: #fafafa;
                --text-secondary: #a1a1aa;
                --text-tertiary: #71717a;
                --border-color: #27272a;
                --border-light: #1f1f23;
                --hover-color: rgba(139, 92, 246, 0.08);
                --shadow-sm: 0 1px 2px rgba(0,0,0,0.2);
                --shadow: 0 4px 6px -1px rgba(0,0,0,0.3), 0 2px 4px -2px rgba(0,0,0,0.2);
                --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.4), 0 4px 6px -4px rgba(0,0,0,0.3);
                --code-bg: #1e1e1e;
            }

			* {
				box-sizing: border-box;
			}

			html {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
				background-color: var(--bg-color);
				color: var(--text-color);
                transition: background-color 0.2s ease, color 0.2s ease;
				scroll-behavior: smooth;
			}

            body {
                margin: 0;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
            }

			main {
				margin: 0 auto;
				padding: 3rem 1.5rem;
				width: 100%;
				max-width: 720px;
				font-size: 16px;
				line-height: 1.7;
				flex: 1;
			}

            nav {
                background-color: rgba(250, 250, 250, 0.8);
                backdrop-filter: saturate(180%) blur(20px);
                -webkit-backdrop-filter: saturate(180%) blur(20px);
                border-bottom: 1px solid var(--border-color);
                position: sticky;
                top: 0;
                z-index: 100;
            }

			[data-theme='dark'] nav {
				background-color: rgba(10, 10, 10, 0.8);
			}

            .nav-content {
                max-width: 720px;
                margin: 0 auto;
                padding: 0.875rem 1.5rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .logo {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                text-decoration: none;
                font-weight: 600;
                font-size: 1.125rem;
				color: var(--text-color);
            }

			.logo:hover {
				color: var(--text-color);
			}

			.logo-icon {
				font-size: 1.25rem;
				background: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.logo-text {
				letter-spacing: -0.02em;
			}

			.nav-right {
				display: flex;
				align-items: center;
				gap: 0.25rem;
			}

			.nav-link {
				padding: 0.5rem 0.75rem;
				font-size: 0.9rem;
				color: var(--text-secondary);
				text-decoration: none;
				border-radius: 6px;
				transition: all 0.15s ease;
			}

			.nav-link:hover {
				color: var(--text-color);
				background-color: var(--hover-color);
			}

            a {
                color: var(--primary-color);
                text-decoration: none;
                transition: color 0.15s ease;
            }

            a:hover {
                color: var(--primary-hover);
            }

            h1, h2, h3, h4, h5, h6 {
                color: var(--text-color);
                line-height: 1.3;
                margin-top: 2.5rem;
                margin-bottom: 1rem;
				font-weight: 600;
				letter-spacing: -0.02em;
            }

			h1 { font-size: 2.25rem; }
			h2 { font-size: 1.5rem; }
			h3 { font-size: 1.25rem; }

            article {
                background-color: var(--surface-color);
                padding: 2.5rem;
                border-radius: 16px;
                box-shadow: var(--shadow);
                border: 1px solid var(--border-color);
            }

            @media (max-width: 640px) {
                article {
                    padding: 1.5rem;
                    border-radius: 12px;
                }
				
				main {
					padding: 2rem 1rem;
				}
            }

            footer {
                margin-top: auto;
                padding: 3rem 1.5rem;
                border-top: 1px solid var(--border-color);
                background-color: var(--bg-secondary);
            }

            .footer-content {
                max-width: 720px;
                margin: 0 auto;
				text-align: center;
            }

			.footer-brand {
				margin-bottom: 1.5rem;
			}

			.footer-logo {
				font-weight: 600;
				font-size: 1rem;
				color: var(--text-color);
			}

			.footer-desc {
				margin: 0.5rem 0 0 0;
				font-size: 0.875rem;
				color: var(--text-tertiary);
			}

			.footer-links {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 0.5rem;
				margin-bottom: 1.5rem;
			}

			.footer-links a {
				color: var(--text-secondary);
				font-size: 0.875rem;
				transition: color 0.15s ease;
			}

			.footer-links a:hover {
				color: var(--primary-color);
			}

			.footer-divider {
				color: var(--text-tertiary);
			}

            .footer-copyright {
				margin: 0;
                color: var(--text-tertiary);
                font-size: 0.8rem;
            }

            @media (max-width: 640px) {
				footer {
					padding: 2rem 1rem;
				}
            }

			/* Code blocks */
			code {
				font-family: 'JetBrains Mono', 'Fira Code', monospace;
				font-size: 0.875em;
				background-color: var(--code-bg);
				padding: 0.2em 0.4em;
				border-radius: 4px;
			}

			pre {
				font-family: 'JetBrains Mono', 'Fira Code', monospace;
				font-size: 0.875rem;
				line-height: 1.6;
				background-color: var(--code-bg);
				padding: 1.25rem;
				border-radius: 12px;
				overflow-x: auto;
				border: 1px solid var(--border-color);
			}

			pre code {
				background: none;
				padding: 0;
			}

			/* Blockquote */
			blockquote {
				margin: 1.5rem 0;
				padding: 1rem 1.5rem;
				border-left: 3px solid var(--primary-color);
				background-color: var(--hover-color);
				border-radius: 0 8px 8px 0;
				color: var(--text-secondary);
			}

			blockquote p {
				margin: 0;
			}

			/* Selection */
			::selection {
				background-color: rgba(139, 92, 246, 0.2);
			}

			/* Scrollbar */
			::-webkit-scrollbar {
				width: 8px;
				height: 8px;
			}

			::-webkit-scrollbar-track {
				background: transparent;
			}

			::-webkit-scrollbar-thumb {
				background: var(--border-color);
				border-radius: 4px;
			}

			::-webkit-scrollbar-thumb:hover {
				background: var(--text-tertiary);
			}
		</style>
	</body>
</html>
